{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Mesh",
  "scopeName": "source.mesh",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#module-calls" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#operators" },
    { "include": "#functions" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.documentation.module.mesh",
          "match": "##!.*$"
        },
        {
          "name": "comment.line.documentation.mesh",
          "match": "##[^!].*$|##$"
        },
        {
          "name": "comment.line.hash.mesh",
          "match": "#[^#=].*$|#$"
        },
        {
          "name": "comment.block.mesh",
          "begin": "#=",
          "end": "=#"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.triple.mesh",
          "begin": "\"\"\"",
          "end": "\"\"\"",
          "patterns": [
            {
              "name": "constant.character.escape.mesh",
              "match": "\\\\."
            },
            {
              "name": "meta.interpolation.mesh",
              "begin": "\\$\\{",
              "end": "\\}",
              "beginCaptures": {
                "0": { "name": "punctuation.section.interpolation.begin.mesh" }
              },
              "endCaptures": {
                "0": { "name": "punctuation.section.interpolation.end.mesh" }
              },
              "patterns": [
                { "include": "source.mesh" }
              ]
            }
          ]
        },
        {
          "name": "string.quoted.double.mesh",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.mesh",
              "match": "\\\\."
            },
            {
              "name": "meta.interpolation.mesh",
              "begin": "\\$\\{",
              "end": "\\}",
              "beginCaptures": {
                "0": { "name": "punctuation.section.interpolation.begin.mesh" }
              },
              "endCaptures": {
                "0": { "name": "punctuation.section.interpolation.end.mesh" }
              },
              "patterns": [
                { "include": "source.mesh" }
              ]
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.mesh",
          "match": "\\b0[xX][0-9a-fA-F_]+\\b"
        },
        {
          "name": "constant.numeric.binary.mesh",
          "match": "\\b0[bB][01_]+\\b"
        },
        {
          "name": "constant.numeric.octal.mesh",
          "match": "\\b0[oO][0-7_]+\\b"
        },
        {
          "name": "constant.numeric.float.mesh",
          "match": "\\b[0-9][0-9_]*(?:\\.[0-9][0-9_]*)?[eE][+-]?[0-9_]+\\b"
        },
        {
          "name": "constant.numeric.float.mesh",
          "match": "\\b[0-9][0-9_]*\\.[0-9][0-9_]*\\b"
        },
        {
          "name": "constant.numeric.integer.mesh",
          "match": "\\b[0-9][0-9_]*\\b"
        }
      ]
    },
    "module-calls": {
      "patterns": [
        {
          "match": "\\b([A-Z][a-zA-Z0-9_]*)(\\.)(\\w+)(?=\\s*\\()",
          "captures": {
            "1": { "name": "entity.name.type.module.mesh" },
            "2": { "name": "punctuation.accessor.mesh" },
            "3": { "name": "entity.name.function.mesh" }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.mesh",
          "match": "\\b(if|else|case|match|when|do|end|return|from|import|for|while|cond|break|continue)\\b"
        },
        {
          "name": "keyword.declaration.mesh",
          "match": "\\b(fn|let|def|type|struct|module|interface|impl|pub|actor|service|supervisor|call|cast|trait|alias)\\b"
        },
        {
          "name": "keyword.operator.mesh",
          "match": "\\b(and|or|not|in|where|with|as|spawn|send|receive|self|link|monitor|terminate|trap|after)\\b"
        },
        {
          "name": "constant.language.mesh",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "support.type.mesh",
          "match": "\\b(Int|Float|String|Bool|Unit|Pid|Option|Result|List|Map|Set|Queue|Json)\\b"
        },
        {
          "name": "support.function.mesh",
          "match": "\\b(Some|None|Ok|Err)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "entity.name.type.mesh",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.range.mesh",
          "match": "\\.\\."
        },
        {
          "name": "keyword.operator.diamond.mesh",
          "match": "<>"
        },
        {
          "name": "keyword.operator.concat.mesh",
          "match": "\\+\\+"
        },
        {
          "name": "keyword.operator.arrow.fat.mesh",
          "match": "=>"
        },
        {
          "name": "keyword.operator.try.mesh",
          "match": "\\?"
        },
        {
          "name": "keyword.operator.logical.and.mesh",
          "match": "&&"
        },
        {
          "name": "keyword.operator.logical.or.mesh",
          "match": "\\|\\|"
        },
        {
          "name": "keyword.operator.pipe.mesh",
          "match": "\\|>"
        },
        {
          "name": "keyword.operator.arrow.mesh",
          "match": "->"
        },
        {
          "name": "keyword.operator.annotation.mesh",
          "match": "::"
        },
        {
          "name": "keyword.operator.comparison.mesh",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.arithmetic.mesh",
          "match": "\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.assignment.mesh",
          "match": "="
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.mesh",
          "match": "\\b(fn|def)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.declaration.mesh" },
            "2": { "name": "entity.name.function.mesh" }
          }
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.mesh",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
